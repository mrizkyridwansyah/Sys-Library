<div class="col-md-6 mt-3">    
    <h3 class="mb-3">Search Author</h3>
    <form action="/authors" method="GET">
        <div class="form-group">
            <label for="author-name">Name</label>
            <input type="text" name="name" class="form-control" id="author-name" value="<%= search.name %>">
        </div>
        <button type="submit" class="btn btn-success">Search</button>
        <button type="button" class="btn btn-primary" onclick="window.location.href = 'authors/create'">Add New</button>
    </form>
    <div class="card mt-5">
        <ul class="list-group list-group-flush">
            <% authors.forEach(author => { %>
                <li class="list-group-item">
                    <%= author.name %>
                    <a class="badge badge-danger" style="float: right; cursor: pointer;" onclick="if(confirm('Are you sure?')) document.getElementById('delete-<%= author.id %>').click()">Delete</a>
                    <form action="/authors/<%= author.id %>?_method=DELETE" method="POST" style="display: none;">
                        <button type="submit" id="delete-<%= author.id %>"></button>
                    </form>
                    <a class="badge badge-primary mr-2" style="float: right;" href="/authors/<%= author.id %>/edit">Edit</a>
                    <a class="badge badge-success mr-2" style="float: right;" href="/authors/<%= author.id %>">View</a>
                </li>
            <% }) %>
        </ul>
    </div>
</div>